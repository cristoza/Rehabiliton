<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Gestión de Terapeutas</title>
</head>
<body>
  <h1>Listado de Terapeutas</h1>

  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Cédula</th>
        <th>Teléfono</th>
        <th>Email</th>
        <th>Especialidad</th>
        <th>Fecha Contratación</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (terapistas.length > 0) { %>
        <% terapistas.forEach(t => { %>
          <tr>
            <td><%= t.id_terapista %></td>
            <td><%= t.nombre %></td>
            <td><%= t.apellido %></td>
            <td><%= t.cedula %></td>
            <td><%= t.telefono %></td>
            <td><%= t.email %></td>
            <td><%= t.especialidad %></td>
            <td><%= t.fecha_contratacion.toISOString().split('T')[0] %></td>
            <td>
              <!-- Placeholder para acciones futuras -->
              <button disabled>Editar</button>
              <button disabled>Eliminar</button>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="9">No hay terapeutas registrados.</td></tr>
      <% } %>
    </tbody>
  </table>

  <h2>Agregar Terapeuta</h2>
  <form action="/admin/terapistas" method="POST">
    <input type="text" name="nombre" placeholder="Nombre" required><br>
    <input type="text" name="apellido" placeholder="Apellido" required><br>
    <input type="text" name="cedula" placeholder="Cédula" required><br>
    <input type="text" name="telefono" placeholder="Teléfono"><br>
    <input type="email" name="email" placeholder="Email" required><br>
    <input type="text" name="especialidad" placeholder="Especialidad"><br>
    <input type="date" name="fecha_contratacion" required><br>
    <button type="submit">Guardar</button>
  </form>
</body>
</html>
